* {
    tls {
        protocols tls1.2 tls1.3
    }

    # Handle WebSocket connections at /ws
    handle /ws* {
        reverse_proxy websocket:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    # Serve the HTML file at /web
    handle /web* {
        root * /var/www
        file_server
    }

    log {
        output file /var/log/caddy/access.log
        format console
    }
}
